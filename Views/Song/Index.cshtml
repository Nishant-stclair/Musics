@* @model IEnumerable<MvcSongs.Models.Songs> *@
@model MvcSongs.Models.SongsGenreViewModel


@* @model MvcSongs.Models.Songs *@

@{
    ViewData["Title"] = "Index Page";
}

<h1>Index Page</h1>
<form asp-controller="Song" asp-action="Search">
    <p>

        
        Music title: <input type="text" name="searchMusic" />
        Date: <input type="text" name="searchDate">
        Price: <input type="text" name="searchPrice">
        <input type="submit" value="Filter Data" />
    </p>

</form>


<a asp-action="Create">Create New Record</a> ||
<a asp-action="DeleteAll">Delete All</a>
</p>

<form asp-action="Hidden">
<table class="table">
    <thead>
        <tr>
            <th>
                <strong> Select </strong>
            </th>
            <th>

                @Html.DisplayNameFor(model => model.music[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.music[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.music[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.music[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.music[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.music[0].SingerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.music[0].Production)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.music[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.music)
        {
            <tr>
                <td>
                    <input type="checkbox" value="@item.Id" name="selectedSongs">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SingerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Production)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<input type="submit" value="Hide Selected" class="btn btn-secondary" />
<a asp-action="HiddenRecords" class="btn btn-warning">Show Hidden Records</a>

</form>
